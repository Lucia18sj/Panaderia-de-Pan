<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/carrito.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Carrito de Compras</title>
    <script src="/script/cart.js" defer></script>

    <script src="https://sdk.mercadopago.com/js/v2"></script>
    <script>
        const mp = new MercadoPago('APP_USR-0cf91c43-6b47-4bfe-9882-bc05f5c36f18', {
            locale: 'es-MX',
        });
    </script>
</head>
<body>
    <div class="row p-4">
        <h1>Carrito</h1>
    </div>

    <div class="row p-4">
        <div class="cart-container">
            <div id="cart-items" class="cart-items">
                <% if (cartItems.length === 0) { %>
                    <p>Tu carrito está vacío.</p>
                <% } else { %>
                    <% cartItems.forEach(item => { %>
                        <div class="cart-item">
                            <img src="https://via.placeholder.com/100" alt="<%= item.product %>">
                            <div class="item-details">
                                <p class="item-name"><%= item.product %></p>
                                <p class="item-price">$<%= item.price %></p>
                                <div class="quantity-controls">
                                    <button class="quantity-btn" onclick="updateQuantity('<%= item.id_product %>', -1)">-</button>
                                    <span class="quantity"><%= item.amount %></span>
                                    <button class="quantity-btn" onclick="updateQuantity('<%= item.id_product %>', 1)">+</button>                                    
                                    
                                </div>
                            </div>
                            <p class="item-total">$<%= item.total %></p>
                        </div>
                    <% }) %>
                <% } %>
            </div>

            <div class="cart-summary">
                <p>Total: <span id="total-price">$<%= cartItems.reduce((total, item) => total + parseFloat(item.total), 0).toFixed(2) %></span></p>
                <button id="buy-button">Comprar</button>

                <div id="checkout-btn-container"></div>
            </div>
        </div>
    </div>

    
</body>
</html>
