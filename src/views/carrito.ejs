<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Carrito de Compras</title>
</head>
<body>
    <%- include('partials/navBar', { name: name, customerId: customerId, lastname: lastname}) %>
    <link rel="stylesheet" href="/css/carrito.css">
    
    <div class="container-fluid me-5">
        <div class="row me-5">
            <h1>Carrito</h1>
        </div>
        <div class="row mb-5" style="justify-content: center;">
            <div class="cart-container me-5" style="width:60%;">
                <div id="cart-items" class="cart-items">
                    <% if (cartItems.length === 0) { %>
                        <p style="color: #C7EAF0; text-align: center; font-size: 30px;">Tu carrito está vacío.</p>
                    <% } else { %>
                        <% cartItems.forEach(item => { %>
                            <div class="cart-item">
                                <img src="<%= item.image_url %>" alt="<%= item.product %>">
                                <div class="item-details">
                                    <p class="item-name"><%= item.product %></p>
                                    <p class="item-price">$<%= item.price %></p>
                                    <div class="quantity-controls">
                                        <span class="quantity">Cantidad: <%= item.amount %></span>
                                    </div>
                                </div>
                                <p class="item-total">$<%= item.total %></p>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
    
            <!-- Resumen del carrito -->
            <div class="cart-container" style="width:20%; height: 25%;">
                <div class="cart-summary">
                    <p >Total: 
                        <span id="total-price" >$<%= cartItems.reduce((total, item) => total + parseFloat(item.total || 0), 0).toFixed(2) %></span>
                    </p>
                    <button id="buy-button" data-customer-id="<%= customerId || '' %>" > Comprar </button>
                    <div id="checkout-btn-container">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pie de página -->
    <%- include('partials/flooter') %>
</body>
</html>
