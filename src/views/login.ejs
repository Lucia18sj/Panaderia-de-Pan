<body background="">
    <%- include('partials/navBar', { name: name, customerId: customerId, lastname: lastname}) %>
    <section>
        <div class="login-box">
            <form action="api/customers/login" method="post">
                <h2>Iniciar Sesión</h2>
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
